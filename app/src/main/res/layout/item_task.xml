<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:foreground="?selectableItemBackground"
    android:background="@drawable/shapes"
    app:cardBackgroundColor="@android:color/holo_blue_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/optionmenu"
            android:layout_width="37sp"
            android:layout_height="37sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_more_vert_black_48dp"
            android:scaleType="fitEnd"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="NAME:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="274dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="91dp"
            android:layout_marginBottom="311dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/item_ADRESS"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="85dp"
            android:text="ADRESS:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_addres"
            android:layout_width="274dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="92dp"
            android:layout_marginBottom="221dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/item_email"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="170dp"
            android:text="EMAIL:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_emails"
            android:layout_width="264dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="95dp"
            android:layout_marginBottom="171dp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/item_mobileno"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="230dp"
            android:text="CONTACT:"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_mobile"
            android:layout_width="264dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="99dp"
            android:layout_marginBottom="115dp"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/location"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/addtoEvent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="71dp"
            android:background="@drawable/placeholder" />

        <Button
            android:id="@+id/addtoEvent"
            android:layout_width="41dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bookmark" />


    </RelativeLayout>

</android.support.v7.widget.CardView>